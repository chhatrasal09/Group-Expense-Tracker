<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".FragmentOfflineCalculate">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/calculated_amount"
    android:id="@+id/amount_text"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:textSize="30sp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/divided_amount"
    android:layout_below="@+id/amount_text"
    android:text="@string/divided_amount_rs"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textSize="20sp"/>

<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/amount_list"
    android:layout_below="@+id/divided_amount"
    android:layout_marginTop="10dp"/>

</RelativeLayout>
